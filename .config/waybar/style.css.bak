@import '/home/soumava/.cache/wal/colors-waybar.css';

* {
    border: none;
    border-radius: 0;
    font-family: "JetBrainsMono Nerd Font", "Helvetica";
    font-size: 12px;
    min-height:0;
    margin: 0;
    padding: 0;
}

button{
    border: none;
    border-radius:0;
}

window#waybar {
    background: transparent;
    color: @cursor;
}

window#waybar.empty #window {
    background-color: transparent;
}

#workspaces {
    background: @color9;
    margin: 5px 10px;
    border-radius: 15px;
    border: 0px;
    font-weight: bold;
    font-style: normal;
    opacity: 0.8;
    font-size: 16px;
}

#workspaces button {
    padding: 2px 5px;
    background: @color9;
    border-radius: 10px;
    font-size: 24px;
    transition: all 0.3s ease-in-out;
    color: @color5;
}

#workspaces button.active {
    color: @color5;
    background:@color5;
    min-width: 60px;
    opacity: 0.8;
    margin:4px;
    transition: all 0.3s ease-in-out;
}

#window {
    background: transparent;
    font-size: 16px;
    font-weight: bold;
}

#mode {
    background: #64727D;
    border-bottom: 3px solid white;
}

#clock, #battery, #cpu, #memory, #network, #pulseaudio, #custom-spotify, #tray, #mode {
    padding: 0 3px;
    margin-top: 4px;
    margin-right: 8px;
}

#pulseaudio{
    padding: 0 10px;
    background: @color13;
    color: @background;
    font-size: 12px;
    font-weight: bold;
    border-radius: 20px;
}

#clock {
    font-weight: bold;
}

#battery {
    padding: 0 10px;
    margin-top: 5px;
    background: #ffffff;
    color: @background;
    font-size: 10px;
    font-weight: bold;

}

#battery icon {
    color: red;
}

#battery.charging {
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: black;
    }
}

#battery.warning:not(.charging) {
    color: @color13;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

